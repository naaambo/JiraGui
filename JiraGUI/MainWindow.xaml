<Window x:Class="JiraGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="220" Width="525">
	<Grid>
		<TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="42,38,0,0" TextWrapping="Wrap" Text="{Binding Key}" VerticalAlignment="Top" Width="317"/>
		<Button x:Name="btnEnter" Content="Button" HorizontalAlignment="Left" Margin="420,38,0,0" VerticalAlignment="Top" Width="75" Click="ButtonClick"/>
		
		<TextBox x:Name="txtOutput" Background="Transparent" BorderThickness="0" Text="{Binding Text, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap" Margin="42,81,31,10"/>
	</Grid>
</Window>
